<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.ShopMate" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/walmart_blue</item>
        <item name="colorPrimaryVariant">@color/walmart_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/walmart_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/walmart_light_gray</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ShopMate.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/walmart_blue</item>
        <item name="colorPrimaryVariant">@color/walmart_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/walmart_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>
